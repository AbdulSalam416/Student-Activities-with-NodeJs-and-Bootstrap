<%- include('partials/header') -%>

<h1>My <%=title%> List</h1>


<table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Due Date</th>
        <th>Owner</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i<activities.length; i++){ %>
      <tr>
        <td><%= activities[i].title %></td>
        <td><%= activities[i].description %></td>
        <td><%= activities[i].dueDate %></td>
        <td><%= activities[i].user.username%></td>
      </tr>
      <% } %>
    </tbody>
  </table>
  


<a class="btn btn-primary" href="/addItem" role="button">Add Item</a>
<%- include('partials/footer')-%>
